<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(<%= asset_path('hero_1.jpg') %>);" data-aos="fade">
  <div class="container">
    <div class="row align-items-center justify-content-center">
      <div class="col-md-10 mx-auto mt-lg-5 text-center">
      	<% if (@profile.first_name != nil && @profile.first_name != "") %>
        	<h1>Bonjour, je m'appelle <%= @profile.first_name%></h1>
        <% else %>
        	<h1>Bonjour, voici mon profil</h1>
        <% end %>
        <p class="mb-5"><strong class="text-white"></strong></p>
      </div>
    </div>
  </div>
  <a href="#show_profile" class="smoothscroll arrow-down"><span class="icon-arrow_downward"></span></a>
</div>