<!------------------------ EDIT USER ACCOUNT FORM ----------------------------------------------------->
<br>
<div class="container" id="edit_profile">
	<div class="row">
    
    <!-- left column -------------------------------->
    
    <div class="col-md-3">
      <div class="text-center">
        <%if @profile.avatar.attached?%>
      	<%= image_tag @profile.avatar,style:"height:170px;width:170px",class:"rounded-circle"%>
  	  <%else%>
     		<img src="https://images.assetsdelivery.com/compings_v2/kritchanut/kritchanut1406/kritchanut140600088.jpg"class="card-img-top" alt="Cinque Terre" style="height:170px;width:170px" class="rounded-circle">
  	  <%end%>    		
        <%= form_tag profile_avatars_path(@profile), multipart: true do %>
        <div>
          <%= file_field_tag :avatar%>
        </div>
          <br>
          <%= submit_tag "Update",class:"btn btn-primary btn-block" %>
        <% end %>
      </div>
    </div>
      
    <!-- edit form column ----------------------------->
 
    <div class="col-md-7 personal-info">       
      <div class="card">
        <%=form_tag profile_path(@profile), method: :put do %>
          <div class="form-group">
            <br>
            <h3 class="col-lg-12 text-center">Personal info</h3>
            <label class="col-md-3 control-label">First name:</label>
            <div class="col-lg-12">
              <%= text_field_tag 'first_name', value = @profile.first_name,class:"col-lg-12"%>        
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label">Last name:</label>
            <div class="col-lg-12">
              <%= text_field_tag 'last_name', value = @profile.last_name,class:"col-lg-12"%>          
            </div>
          </div>
          <div class="form-group">
           <label class="col-md-3 control-label">Birthdate:</label>
            <div class="col-lg-12">
             <%= text_field_tag 'birthdate', value = @profile.birthdate,class:"col-lg-12"%>          
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label">City:</label>
            <div class="col-lg-12">
              <%= text_field_tag 'city', value = @profile.city,class:"col-lg-12"%>
            </div>   
          </div>
          
          <div class="form-group">
            <label class="col-lg-3 control-label">Description:</label>
            <div class="col-lg-12">
              <%= text_area_tag 'description', value = @profile.description,size: "15x5",class:"col-lg-12"%>  
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-12">
              <%= submit_tag "Save Changes",class:"btn btn-primary btn-block"%>
            </div>
          </div>
        <%end%>
        </form>
      </div>
    </div>
  </div>
</div>
<br>
<!------------------------ EDIT USER ACCOUNT FORM ----------------------------------------------------->




