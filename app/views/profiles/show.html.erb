<!------------------------ EDIT USER ACCOUNT FORM ----------------------------------------------------->  

<section class="site-section bg-light bg-image" id="show_profile">
    <div class="row d-flex justify-content-center">
      <div class="col-sm-7 col-md-7 col-lg-5 mx-auto">      
        <div class="card">
          <div>
            <div class="form-group">
            <br>
              <div class="text-center">
                <%if @profile.avatar.attached?%>
                   <%= image_tag @profile.avatar,style:"height:170px;width:170px",class:"rounded-circle"%>
                <%else%>
                  <img src="https://images.assetsdelivery.com/compings_v2/kritchanut/kritchanut1406/kritchanut140600088.jpg"class="card-img-top" alt="Cinque Terre"style="height:170px;width:170px" class="rounded-circle">
                <%end%>       
              </div>
              <br>
              <div class="p-3 bg-white">
                <div class="col-md-12"> 
                  <div class="col-12">
                    <p class="text-black">Nom : <span><%=@profile.last_name%></span></p>
                  </div>
                </div>

              <div class="col-md-12"> 
                <div class="col-12">
                  <p class="text-black">Pr√©nom : <span><%=@profile.first_name%></span></p>
                </div>
              </div>

              <div class="col-md-12"> 
                <div class="col-12">
                  <p class="text-black">Date de Naissance : <span><%=@profile.birthdate.strftime("%d/%m/%Y")%></span></p>
                </div>
              </div>

              <div class="col-md-12"> 
                <div class="col-12">
                  <p class="text-black">Ville : <span><%=@profile.city%></span></p>
                </div>
              </div>

              <div class="col-md-12"> 
                <div class="col-12">
                  <p class="text-black">Description : <span><%=@profile.description%></span></p>
                </div>
              </div>
              <br> 
            
              <div class="text-center">
                <div class="col-md-12">
                  <div class="text-center">   
                    <div class="form-group">
                      <%= link_to "Edit mon profil",edit_profile_path(@profile), class:"btn btn-primary btn-lg btn-block text-white form-label", style:"margin-top:1rem; margin-bottom:1rem;"%>
                    </div>
                  </div>
                </div>                           
              </div>
              </div>  
            </div>
          </div>
        </div>
      </div>
    </div>
</section>