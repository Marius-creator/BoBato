<%= form_with model: @convoy, local: true do |form| %>
  <% if @convoy.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@convoy.errors.count, "error") %> prohibited
        this convoy from being saved:
      </h2>
      <ul>
        <% @convoy.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
