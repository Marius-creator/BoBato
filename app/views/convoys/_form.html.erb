<div class="container" id="new_convoy">
  <div class="row"> 
    <div class="col-sm-9 col-md-7 col-lg-7 mx-auto">      
      <div class="card">
        <div class="form-group">
          <%=form_tag convoys_path do %>
            <div class="form-group">
              <br>
              <h3 class="col-lg-12 text-center">Convoy Info</h3>
              <label class="col-md-5 control-label">Title:</label>
              <div class="col-lg-12">
                <%= text_field_tag 'title',value = params[:title],class:"col-lg-12"%>
              </div>        
            </div>
            <div class="form-group">
              <label class="col-md-5 control-label">Boat type:</label>
              <div class="col-lg-12">
                <%= text_field_tag 'boat_type',value = params[:boat_type],class:"col-lg-12"%>       
              </div>
            </div>
            <div class="form-group">
             <label class="col-md-5 control-label">boat_owner_id:</label>
              <div class="col-lg-12">
               <%= number_field_tag 'boat_owner_id',value = params[:boat_owner_id],class:"col-lg-12"%>          
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-5 control-label">Required license:</label>
              <div class="col-lg-12">
                <%= text_field_tag 'required_license',value = params[:required_license],class:"col-lg-12"%>
              </div>   
            </div>      
            <div class="form-group">
              <label class="col-lg-5 control-label">Description:</label>
              <div class="col-lg-12">
                 <%= text_area_tag 'description',value = params[:description],class:"col-lg-12",size: "15x5"%>  
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-5 control-label">Departure port:</label>
              <div class="col-lg-12">
                 <%= text_field_tag 'departure_port',value = params[:departure_port],class:"col-lg-12"%>  
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-5 control-label">Arrival port:</label>
              <div class="col-lg-12">
                 <%= text_field_tag 'arrival_port',value = params[:arrival_port],class:"col-lg-12"%>  
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-5 control-label">Date of departure:</label>
              <div class="col-lg-12">
                 <%= date_field_tag 'date_of_departure',value = params[:date_of_departure],class:"col-lg-12"%>  
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-5 control-label">Date of arrival:</label>
              <div class="col-lg-12">
                 <%= date_field_tag 'date_of_arrival',value = params[:date_of_arrival],class:"col-lg-12"%>  
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-5 control-label">Convoy price:</label>
              <div class="col-lg-12">
                 <%= number_field_tag 'convoy_price',value = params[:convoy_price],class:"col-lg-12"%>  
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-5 control-label">Add pictures:</label>
              <%= file_field_tag 'pictures', multiple:true,class:"col-lg-12"%>
            </div>
            <div class="text-center"> 
              <div class="col-lg-12">
                <div class="text-center">   
                  <div class="form-group">
                    <%= submit_tag "Create", class: "btn btn-primary btn-block" %>
                  </div>
                </div>
              </div>                           
            </div>
          <%end%>                
        </div>
      </div>
    </div>
  </div>
</div>  

