<div class="row d-flex justify-content-center">  
  <div class="col-md-12"> 

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="col-12">
      <h4 class="modal-title text-black" id="exampleModalCenterTitle">Connexion</h4>
    </div>
    <br/>
    <div class="col-12">
      <%= f.label(:email, "email", class:"text-black", style:"font-family:'Oswald', sans-serif; text-transform: uppercase; font-weight: 300 !important;") %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"name@example.com" %>
    </div>
    <br/>
    <div class="col-12">
      <%= f.label(:password, "mot de passe", class:"text-black", style:"font-family:'Oswald', sans-serif; text-transform: uppercase; font-weight: 300 !important;") %>
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
    </div>

    <div class="col-12">
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :se_souvenir_de_moi, style:"font-size:0.8rem;" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-12">
      <%= f.submit "Se connecter", class:"btn btn-primary btn-lg btn-block text-white", style:"margin-top:1rem; margin-bottom:1rem;" %>
      <p style="font-size:0.9rem; margin-bottom: 0.5rem"> Vous n'avez pas de compte ? <%= link_to "Inscription", new_registration_path(resource_name)%>
      </p>
      <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), style:"font-size:0.9rem;" %><br />
    </div>
    <% end %>

  </div>
</div>
